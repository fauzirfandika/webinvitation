---
import '../styles/global.scss'
import Cover from '../components/above.astro'
import Content from '../components/under.astro'
import Count from '../scripts/countdown.astro'
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">

    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Nabila Fauzi</title>
  </head>

  <body>
    <Cover namaU="Nama Undangan"/>
    <Content/>
  </body>
</html>

<script>
  window.addEventListener("scroll", function () {
    let deviceHeight = window.innerHeight;
    let scrollPos = window.scrollY;
    if (scrollPos >= deviceHeight) {
      document.getElementById("under").classList.add("foc");
    }
    else {
      document.getElementById("under").classList.remove("foc");
    }
  });
</script>

  <Count/>
